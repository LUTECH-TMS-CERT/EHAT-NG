%script{:type=>"text/javascript"}
  NProgress.configure({ easing: 'ease', speed: 500 });
  NProgress.start();

.span9.indent2
  %canvas{:id => "myChart", :width => "5", :height => "2"}

%script{:type=>"text/javascript"}
  NProgress.inc();

%script{:type=>"text/javascript"}
  var ctx = document.getElementById("myChart");
  var myChart = new Chart(ctx, {
  type: 'bar',
  data: {
  labels: ["SQLi", "XSS", "PATH TRAV", "XXE", "RCE", "DoS"],
  datasets: [{
  label: '# of Vulnerability',
  data: [#{@sqli}, #{@xss}, #{@path}, #{@xxe}, #{@rce}, #{@dos}],
  backgroundColor: [
  'rgba(255, 99, 132, 0.2)',
  'rgba(54, 162, 235, 0.2)',
  'rgba(255, 206, 86, 0.2)',
  'rgba(75, 192, 192, 0.2)',
  'rgba(153, 102, 255, 0.2)',
  'rgba(255, 159, 64, 0.2)'
  ],
  borderColor: [
  'rgba(255,99,132,1)',
  'rgba(54, 162, 235, 1)',
  'rgba(255, 206, 86, 1)',
  'rgba(75, 192, 192, 1)',
  'rgba(153, 102, 255, 1)',
  'rgba(255, 159, 64, 1)'
  ],
  borderWidth: 1
  }]
  },
  options: {
  scales: {
  yAxes: [{
  ticks: {
  beginAtZero:true
  }
  }]
  }
  }
  });
%script{:type=>"text/javascript"}
  NProgress.done();